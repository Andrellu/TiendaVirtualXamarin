<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiendaVirtualXamarin.Views.LoginView"
             Visual="Default"
             xmlns:local="clr-namespace:TiendaVirtualXamarin">
    <ContentPage.Content>
        <ScrollView Orientation="Vertical">
            <StackLayout x:Name="Inicio" BindingContext="{Binding Source={x:Static local:App.ServiceLocator}, Path=LoginViewModel}">
                <Label Text="Iniciar sesión" FontSize="50" HorizontalOptions="CenterAndExpand" />

                <BoxView />

                <!--
                <Frame Margin="0" TranslationX="15" TranslationY="355">
                    <BoxView HeightRequest="325" CornerRadius="20" WidthRequest="200" Color="Orange" />
                </Frame>
                -->

                <Frame >
                    <StackLayout>
                        <StackLayout>
                            <Label Text="Nombre Usuario:" FontSize="20" x:Name="dni"/>
                            <Entry WidthRequest="500"  Text="{Binding UserName}"/>
                        </StackLayout>
                        <StackLayout>
                            <Label Text="Contraseña:" FontSize="20" />
                            <Entry Text="{Binding Password}" IsPassword="True" WidthRequest="500" />
                        </StackLayout>
                        <Button Command="{Binding AccionIniciarSesion}" Text="Iniciar sesión" FontSize="15" />
                        <Button Command="{Binding RegistrarUsuario}" Text="Registrarse" FontSize="15" />
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>