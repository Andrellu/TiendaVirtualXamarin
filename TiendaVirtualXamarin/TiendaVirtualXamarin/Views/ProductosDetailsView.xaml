<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiendaVirtualXamarin.Views.ProductosDetailsView"
             Visual="Material"
             xmlns:converters="clr-namespace:TiendaVirtualXamarin.Converters">
    <ContentPage.Resources>
        <converters:ImageProductosConverts x:Key="ImageConverter"/>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView Orientation="Vertical">
            <StackLayout>
                <Image Source="{Binding Producto.Imagen, Converter={StaticResource ImageConverter}}" Aspect="AspectFill" HeightRequest="250" WidthRequest="180"/>
                <Label Text="{Binding Producto.Nombre}" FontSize="25"/>
                <Label Text="{Binding Producto.Descripcion}" FontSize="20"/>
                <Label TextColor="red" Text="{Binding Producto.Stock, StringFormat='Cantidad: {0}.'}" FontSize="20"/>
                <Label TextColor="Blue" Text="{Binding Producto.Precio, StringFormat='Precio: {0}€'}" FontSize="20"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>